<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/spacing_sm">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/text_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_sm"
                android:text="Chi tiết ứng viên"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_xl"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <!-- Basic Info -->
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên ứng viên"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_xxl"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvHeadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_md"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:text="email@example.com"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tvJobApplied"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:text="Ứng tuyển: ..."
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_size_md" />

                <!-- Current Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trạng thái: "
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_md" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_input_rounded"
                        android:paddingHorizontal="@dimen/spacing_sm"
                        android:paddingVertical="@dimen/spacing_xs"
                        android:text="Chờ xử lý"
                        android:textColor="@color/status_pending"
                        android:textSize="@dimen/text_size_md"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- About Section -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardAbout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lg"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_md">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giới thiệu"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_lg"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvAbout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_sm"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_md" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Skills Section -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSkills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_md">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kỹ năng"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_lg"
                            android:textStyle="bold" />

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipGroupSkills"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_sm" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Experience Section -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardExperience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_md">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kinh nghiệm"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_lg"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/layoutExperiences"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_sm"
                            android:orientation="vertical" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:elevation="8dp"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_md">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReject"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_sm"
                android:layout_weight="1"
                android:text="Từ chối"
                android:textColor="@color/status_rejected"
                app:cornerRadius="24dp"
                app:strokeColor="@color/status_rejected" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShortlist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_sm"
                android:layout_weight="1"
                android:backgroundTint="@color/status_shortlisted"
                android:text="Chọn ứng viên"
                app:cornerRadius="24dp" />
        </LinearLayout>

    </LinearLayout>
</layout>
