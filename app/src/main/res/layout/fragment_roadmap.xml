<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.hustleapp.ui.applicant.roadmap.RoadmapViewModel" />
        <import type="android.view.View" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/roadmap"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_xl"
                        android:textStyle="bold" />

                    <!-- Reset button (only visible when roadmap is shown) -->
                    <ImageButton
                        android:id="@+id/btnReset"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="@dimen/spacing_sm"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Reset"
                        android:src="@drawable/ic_add"
                        android:visibility="@{viewModel.showInputForm ? View.GONE : View.VISIBLE}"
                        app:tint="@color/primary" />
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <!-- Loading Overlay -->
        <FrameLayout
            android:id="@+id/loadingOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80FFFFFF"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.GONE}"
            tools:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ProgressBar
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:indeterminateTint="@color/primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:text="Đang tạo lộ trình..."
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_lg" />
            </LinearLayout>
        </FrameLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Input Form -->
                <LinearLayout
                    android:id="@+id/inputForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg"
                    android:visibility="@{viewModel.showInputForm ? View.VISIBLE : View.GONE}">

                    <!-- Header Card -->
                    <com.google.android.material.card.MaterialCardView
                        style="@style/Widget.HUSTle.CardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_lg"
                        app:cardBackgroundColor="@color/primary">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_lg">

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/ic_roadmap"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_md"
                                android:text="Tạo Lộ Trình AI"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_xxl"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:gravity="center"
                                android:text="Gemini AI sẽ tạo lộ trình phát triển\nsự nghiệp phù hợp với bạn"
                                android:textColor="#DDDDDD"
                                android:textSize="@dimen/text_size_md" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Current Role Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.HUSTle.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Vị trí hiện tại của bạn *"
                        app:helperText="Ví dụ: Junior Developer, Sinh viên CNTT"
                        app:helperTextEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCurrentRole"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:text="@={viewModel.currentRole}" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Target Role Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.HUSTle.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_md"
                        android:hint="Vị trí mục tiêu *"
                        app:helperText="Ví dụ: Senior Android Developer, Tech Lead"
                        app:helperTextEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTargetRole"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:text="@={viewModel.targetRole}" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Current Skills Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.HUSTle.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_md"
                        android:hint="Kỹ năng hiện có"
                        app:helperText="Ví dụ: Java, Kotlin, Git, SQL"
                        app:helperTextEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCurrentSkills"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:text="@={viewModel.currentSkills}" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Years of Experience -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.HUSTle.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_md"
                        android:hint="Số năm kinh nghiệm"
                        app:helperText="Nhập 0 nếu mới bắt đầu"
                        app:helperTextEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etYearsExperience"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Generate Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGenerate"
                        style="@style/Widget.HUSTle.Button.Primary"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_marginTop="@dimen/spacing_xl"
                        android:text="✨ Tạo Lộ Trình với AI"
                        android:textSize="@dimen/text_size_lg" />

                </LinearLayout>

                <!-- Flowchart Result -->
                <LinearLayout
                    android:id="@+id/resultContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="@{viewModel.showInputForm ? View.GONE : View.VISIBLE}">

                    <!-- Summary Card -->
                    <com.google.android.material.card.MaterialCardView
                        style="@style/Widget.HUSTle.CardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_md">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_md">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lộ trình cho bạn"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_sm" />

                            <TextView
                                android:id="@+id/tvTargetRoleResult"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{viewModel.currentRole + ` → ` + viewModel.targetRole}"
                                android:textColor="@color/primary"
                                android:textSize="@dimen/text_size_lg"
                                android:textStyle="bold"
                                tools:text="Junior → Senior Developer" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Flowchart -->
                    <com.example.hustleapp.ui.components.FlowchartView
                        android:id="@+id/flowchartView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/spacing_sm" />

                </LinearLayout>
            </FrameLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
